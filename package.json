{
  "name": "students-courses",
  "version": "1.0.0",
  "description": "An app for students to take and pass courses",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=PROD node --experimental-specifier-resolution=node index.js",
    "dev": "NODE_ENV=DEV nodemon --experimental-specifier-resolution=node index.js",
    "lint": "eslint '**/*.{js}' --quiet --fix",
    "prettify": "prettier --write \"src/**/*.js\" \"test/**/*.js\" \"index.js\"",
    "test": "NODE_ENV=TEST NODE_OPTIONS=--experimental-vm-modules npx jest --coverage",
    "docker:build": "NODE_ENV=DEV docker compose build",
    "docker:run": "NODE_ENV=DEV docker compose up"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.4.7",
    "aws-sdk": "^2.1011.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.21",
    "multer": "^1.4.3",
    "passport": "^0.5.0",
    "passport-jwt": "^4.0.0",
    "path": "^0.12.7",
    "pg": "^8.7.1",
    "sequelize": "^6.6.5",
    "uuidv4": "^6.2.12"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "faker": "^5.5.3",
    "jest": "^27.3.1",
    "nock": "^13.2.0",
    "nodemon": "^2.0.9",
    "prettier": "^2.3.2",
    "supertest": "^6.1.6"
  },
  "lint-staged": {
    "**/*.{js,json}": "npm run prettify",
    "**/*.js": "npm run lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
